@{
    ViewData["Title"] = "Game-Matching";
}

<style type="text/css">
    body {
        overflow-y: hidden;
        background-image: url(https://static.vecteezy.com/system/resources/thumbnails/010/047/365/original/retro-land-80s-retro-futuristic-sci-fi-seamless-loop-retro-background-animation-low-poly-terrain-retro-1980s-background-and-a-luorescent-visual-background-retro-neon-background-in-80-s-style-free-video.jpg);
    }
</style>

<div class="container py-3 bg-light bg-opacity-50 border border-2 col-12 col-md-7" 
    style="margin-top: 60px; border-radius: 40px;">
    <div class="font-weight-bold text-center mb-4 mt-3">
        <a href="/"><img class="col-8 col-md-9" src="https://see.fontimg.com/api/renderfont4/1Gxje/eyJyIjoiZnMiLCJoIjo0NiwidyI6MTAwMCwiZnMiOjQ2LCJmZ2MiOiIjMDAwMDAwIiwiYmdjIjoiI0ZGRkZGRiIsInQiOjF9/Z2FtZS1tYXRjaGluZw/crossed-out.png" alt="Modern fonts"></a>
    </div>

    <form id="form">
        <div class="d-flex justify-content-center">
            <div class="form-group mb-3 col-md-8 col-12">
                <input type="text" minlength="5" required class="form-control" id="name" placeholder="Enter your name here..."/>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <div class="form-group mb-3 col-md-8 col-12">
                <select class="form-control" required id="roomType">
                    <option value="" disabled selected>Select room type</option>
                    <option value="1">Random</option>
                    <option value="2">Existed room</option>
                </select>
            </div>
        </div>

        <div class="d-none justify-content-center" id="gameContainer">
            <div class="form-group mb-3 col-md-8 col-12">
                <select class="form-control" required id="game">
                    <option value="" disabled selected>Select game</option>
                    <option value="1">League of legend</option>
                    <option value="2">Fifa online 4</option>
                    <option value="3">Other</option>
                </select>
            </div>
        </div>

        <div class="d-none justify-content-center" id="teamSizeContainer">
            <div class="form-group mb-3 col-md-8 col-12">
                <input type="number" min="1" class="form-control" id="teamSize" value="0"/>
            </div>
        </div>

        <div class="d-none justify-content-center" id="roomIdContainer">
            <div class="form-group mb-3 col-md-8 col-12">
                <input type="text" class="form-control" required id="roomId" placeholder="Enter room id..."/>
            </div>
        </div>


        <div class="form-group d-flex justify-content-center">
            <button type="button" class="btn btn-dark" id="findGameBtn" 
            >
                Match <i class="fa fa-fire" aria-hidden="true"></i>
            </button>
        </div>
    </form>


    <div class="modal fade" id="waitingModel" 
        tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
        data-bs-keyboard="false" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    Finding game...
                </div>
                <div class="modal-footer">
                    <button type="button" id="cancelBtn" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.13/signalr.min.js"></script>
<script src="~/js/home.js"></script>
